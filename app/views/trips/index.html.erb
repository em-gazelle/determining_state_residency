    <tr>
      <th>Start Date</th>
      <th>End Date</th>
      <th>State</th>
      <th>Total Days</th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.state %></td>
        <td><%= trip.total_days %></td>
      </tr>
    <% end %>
  </tbody>
</table>

