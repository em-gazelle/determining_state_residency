<%= form_for(@person) do |f| %>
  <% if @person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@person.errors.count, "error") %> stopped us from beginning to calculate your state of residence:</h2>

      <ul>
      <% @person.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :desired_state_of_residency %><br />
    <%= f.awesomplete_field(:desired_state_of_residency, collection: STATES) %>
    <%#= f.awesomplete_field(:desired_state_of_residency, list: LIST) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>